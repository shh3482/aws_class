class GameRecord {
	private String name;
	private int score;
	
	public String getName() {
		return name;
	}
	
	public void setName(String name) {
		this.name = name;
	}
	
	public int getScore() {
		return score;
	}
	
	public void setScore(int score) {
		this.score = score;
	}
	
	public GameRecord(String name, int score) {
		this.name = name;
		this.score = score;
	}

	@Override
	public String toString() {
		return "GameRecord [name=" + name + ", score=" + score + "]";
	}
	
}